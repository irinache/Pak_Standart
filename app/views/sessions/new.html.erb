<% provide(:title, "Log in") %>

<%= image_tag 'entry_bg.png', class: 'block_background'  %>
<div class="login_block">
  <h1 class="heading">Вход</h1>

    <div class="form">

      <%= form_for(:session, url: login_path) do |f| %>
        <%= render 'shared/login_errors' %>
        <%= f.email_field :email,placeholder: 'e-mail'%>

        <%= f.password_field :password, placeholder: 'Пароль'%>

        <%= f.label :remember_me do %>
          <%= f.check_box :remember_me %>
          <span>Запомнить меня</span>
        <% end %>
        <%= link_to "Забыли пароль?", new_password_reset_path %>
        <%= f.submit "Войти", class: 'btn_green' %>
      <% end %>

      <%= link_to "Зарегистрироваться", signup_path, class: "text_link" %>
    </div>

</div>