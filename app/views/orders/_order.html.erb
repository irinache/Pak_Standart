<li id="order-<%= order.id %>">
  <%= link_to gravatar_for(order.user, size: 50), order.user %>
  <span class="user"><%= link_to order.user.name, order.user %></span>
  <span class="address"> №<%= order.id %></span>
  <span class="timestamp">
    Added <%= time_ago_in_words(order.created_at) %> ago.
    <% if current_user?(order.user) %>
      <%= link_to "Удалить", order, method: :delete,
                  data: { confirm: "Вы уверены?" } %>
      <%= link_to "Показать", order_path%>
    <% end %>
  </span>
</li>